{
  "name": "the-traveler-times",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "start": "lerna run start --parallel --scope @the-traveler-times/*-worker",
    "start:web": "lerna run start --scope @the-traveler-times/website",
    "start:web:prod": "lerna run start:prod --scope @the-traveler-times/website",
    "start:vendors": "cd packages/d2-vendors-worker && npm run start",
    "start:nightfall": "cd packages/d2-nightfall-worker && npm run start",
    "start:trials": "cd packages/d2-trials-worker && npm run start",
    "start:oauth": "cd packages/d2-oauth-worker && npm run start",
    "start:definition": "cd packages/d2-definition-worker && npm run start",
    "start:season": "cd packages/d2-season-worker && npm run start",
    "start:pgcr": "cd packages/d2-pgcr-crawler && npm run start",
    "publish": "npm run build && lerna run publish",
    "version": "lerna version",
    "build": "lerna run build --scope @the-traveler-times/*-gateway && lerna run build --parallel --scope @the-traveler-times/*-worker",
    "build:web": "lerna run build --scope @the-traveler-times/website",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test",
    "format": "lerna run format --parallel",
    "clean": "lerna run clean",
    "update": "npm-check -u",
    "update:workers": "lerna exec --scope @the-traveler-times/*-worker --scope @the-traveler-times/utils --scope @the-traveler-times/types --scope @the-traveler-times/bungie-api-gateway  -- npm-check -u -yes"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/empatheticbot/the-traveler-times.git"
  },
  "author": "Steve Ledsworth <steve@empatheticbot.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/empatheticbot/the-traveler-times/issues"
  },
  "homepage": "https://github.com/empatheticbot/the-traveler-times#readme",
  "devDependencies": {
    "@cloudflare/wrangler": "^1.19.7",
    "eslint": "^8.8.0",
    "lerna": "4.0.0",
    "npm-check": "5.9.2"
  }
}