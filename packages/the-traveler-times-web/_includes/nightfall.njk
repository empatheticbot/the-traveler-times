{% set nightfall = destinyData.nightfall %}
{% if nightfall %}
<article class="article-container iron-banner--container">
  <section class="iron-banner--image-container nightfall--image-container">
    <img class="iron-banner--image-container--image" src="https://bungie.net{{ nightfall.activities[0].pgcrImage }}" />
    <img class="iron-banner--image-container--icon" src="https://bungie.net{{ nightfall.activities[0].displayProperties.icon | safe }}" />
  </section>
  <section class="iron-banner--text-container">
    <h2 class="iron-banner--heading">This Week's Nightfall Strike is <span class="xur-planet">{{ nightfall.activities[0].displayProperties.description | safe }}</span></h2>
    <p>{{ ironBanner.displayProperties.description }}</p>
  </section>
  <ol class="item-list">
    {# {% for activity in nightfall.activities %}
      <li class="item-wrapper">
      <div class="item-container">
        <header class="item-header">
          <section class="item-title">
            <h3 class="item-name">{{ activity.selectionScreenDisplayProperties.name | safe }}</h3>
            <h5 class="item-cost">Light Level: {{ activity.activityLightLevel | safe }}</h5>
          </section>
        </header>
        <section class="item-description">
          {% for modifier in activity.modifiers %}
            {% set name = modifier.displayProperties.name %}
            {% set icon = modifier.displayProperties.icon %}
            {% set description = modifier.displayProperties.description %}
            {% include 'item.njk' %}
          {% endfor %}
        </section>
      </div>
      </li>
    {% endfor %} #}
    {% for name, modifiers in nightfall.modifierGroups | groupby("name") %}
      <li class="item-wrapper">
      <div class="nightfall--difficulty-container">
        <header class="item-header">
          <section class="item-title">
            <h3 class="nightfall--difficulty-name">{{ name | safe }}</h3>
            {# <h5 class="item-cost">Light Level: {{ activity.activityLightLevel | safe }}</h5> #}
          </section>
        </header>
        <section class="item-description">
          {% for modifier in modifiers %}
            {% set name = modifier.displayProperties.name %}
            {% set icon = modifier.displayProperties.icon %}
            {% set description = modifier.displayProperties.description %}
            {% include 'modifier.njk' %}
          {% endfor %}
        </section>
      </div>
      </li>
    {% endfor %}
  </ol>
</article>
{% endif %}