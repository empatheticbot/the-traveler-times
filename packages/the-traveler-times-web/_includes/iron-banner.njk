{% set ironBanner = destinyData.ironBanner %}
{% if ironBanner.available %}
<article class="article-container iron-banner--container">
  <section class="iron-banner--image-container">
    <img class="iron-banner--image-container--image" src="https://bungie.net{{ ironBanner.image | safe}}" />
    <img class="iron-banner--image-container--icon" src="https://bungie.net{{ ironBanner.displayProperties.icon | safe }}" />
  </section>
  <section class="iron-banner--text-container">
    <h2 class="iron-banner--heading">{{ ironBanner.displayProperties.name | safe }}</h2>
    <p>{{ ironBanner.displayProperties.description }}</p>
  </section>
</article>
{% endif %}
