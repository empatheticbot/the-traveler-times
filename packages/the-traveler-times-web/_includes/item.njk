<div class="item-container">
  <header class="item-header">
    <section class="item-title">
      <h3 class="item-name">{{ item.name }}</h3>
      <h5 class="item-cost">{{ item.cost | safe }}</h5>
    </section>
    <img class="item-image" src="https://www.bungie.net{{ item.icon }}">
  </header>
  <section class="item-description">{{ item.description | safe }}</section>
</div>
