<section class="section-container {{ sectionClass }}">
<header class="section-header">
  <h3 class="section-title">{{ sectionTitle }}</h3>
  <div class="section-divider"></div>
  <p class="section-date">{% if sectionTimeDescripter %}
  {{ sectionTimeDescripter + ' ' }}
  {% endif %}
  {% if sectionDate %}
  <time id="{{ sectionId }}" datetime="{{ sectionDate | htmlDateString }}">{{ sectionDate | relativeDate }}</time>
  {% endif %}
  </p>
</header>
 {% block content %}
   {{ content | safe }}
 {% endblock %}
</section>
<script type="module">
  var sectionDateElement = document.querySelector('#{{sectionId}}');
  if (sectionDateElement) {
    var sectionDate = moment('{{ sectionDate }}');
    function updateRelativeDates() {
      sectionDateElement.innerText = `${sectionDate.fromNow()}`;
      console.log(sectionDateElement.innerText);
    }
    setInterval(updateRelativeDates, 10000);
    updateRelativeDates();
  }
</script>
