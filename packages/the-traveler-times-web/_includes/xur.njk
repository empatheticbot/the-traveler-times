{% set xur = destinyData.xur %}
{% if xur.nextRefreshDate %}
<article class="article-container">
  <header class="article-header">
    <div class="article-line"></div>
    <time class="article-date" datetime="{{ xur.nextRefreshDate | htmlDateString }}">
    {{ xur.nextRefreshDate | relativeDate }}</time>
    {% if xur.planet and xur.location %}
    <h2 class="article-title">Xûr Spotted on <span class="xur-planet">{{ xur.planet | safe }}</span></h2>
    <h3 class="article-subtitle">Last seen at <span class="xur-location">{{ xur.location | safe }}</span></h3>
    {% else %}
    <h2 class="article-title">Xûr Arrived, Location Unknown</h2>
    {% endif %}
  </header>
  <ol class="item-list">
    {% for item in xur.items %}
      <li class="item-wrapper">{% include 'item.njk' %}</li>
    {% endfor %}
  </ol>
</article>
{% endif %}
