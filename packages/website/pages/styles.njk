:root {
  --font-size: clamp(24px, calc(18px + 0.3vw), 24px);
  --font-size-s: clamp(18px, calc(14px + 0.3vw), 19px);
  --font-size-l: clamp(32px, calc(24px + 1vw), 32px);
  --font-size-xl: clamp(52px, calc(8px + 10vw), 102px);

  --line-height: 1;
  --line-height-s: 0.86;
  --line-height-l: 1.286;
  --line-height-xl: 1.286;

  --space-vertical: 6vh;
  --space-horizontal: 6vw;

  --max-width: 700px;

  --color-primary: rgba(51, 51, 51);
  --color-text-light: rgba(0, 0, 0, 0.45);
  --color-text: rgba(51, 51, 51);
  --color-text-dark: rgba(0, 0, 0, 0.85);
  --color-container: rgba(0, 0, 0, 0.06);
  --color-background: rgb(245, 245, 245);
  --color-red: #e92c0a;

  --box-shadow-far: 0.6px 1.2px 1.2px -2px rgb(0 0 0 / 4%),
    1.4px 2.7px 2.8px -2px rgb(0 0 0 / 6%),
    2.4px 4.7px 4.9px -2px rgb(0 0 0 / 7%),
    3.8px 7.5px 7.8px -2px rgb(0 0 0 / 7%),
    5.8px 11.6px 12px -2px rgb(0 0 0 / 8%),
    9px 18.1px 18.7px -2px rgb(0 0 0 / 9%), 15px 30px 31px -2px rgb(0 0 0 / 9%),
    30px 60px 62px -2px rgb(0 0 0 / 12%);
  --box-shadow-close: 0.6px 1.2px 1.2px -2px rgb(0 0 0 / 4%),
    1.4px 2.7px 2.8px -2px rgb(0 0 0 / 6%),
    2.4px 4.7px 4.9px -2px rgb(0 0 0 / 7%),
    3.8px 7.5px 7.8px -2px rgb(0 0 0 / 7%);
}

