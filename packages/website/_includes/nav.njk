{% if showNav %}
  <section class="nav">
    <nav class="nav-group">
      {% for date, activities in nav | groupby("date") %}
        <section class="nav-section">
          <since-date 
          class="small-label"
          datetime="{{date}}"
          >
            {{date}}
          </since-date>
          {% for activity in activities %}
            {{ activity.markup | safe}}
          {% endfor %}
        </section>
      {% endfor %}
    </nav>
    <aside class="nav-aside">
      <p>
 The next reset is <until-date datetime="{{
      weekly.nextWeeklyReset
    }}"></until-date>. </p>
      <p>
        <a href="#season">{{
    season.currentSeason.displayProperties.name
  }}</a> ends <until-date datetime="{{
    season.currentSeason.endDate
  }}"></until-date>.</p>
      <p class="nav-site-updated">
        Site last updated <since-date datetime="{{computed.buildDate}}"></since-date>.
      </p>
      <p class="nav-support">
        ❤️ <a href="https://buy.thetraveler.news">I'd like to show my support</a>
      </p>
      <p class="nav-support">
        🙋‍♀️ <a href="/support">I have a suggestion</a>
      </p>
      <p class="nav-support">
        🎓 <a href="/about">Learn more about The Traveler Times</a>
      </p>
    </aside>
  </section>
{% endif %}