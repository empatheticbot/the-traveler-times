<div class="inventory-item-number-separater">
</div>
<section class="inventory-item">
  <header class="vendor-item-header">
    <h3 class="vendor-item-name">{{ item.displayProperties.name or item.name | safe}}</h3>
    <p class="vendor-item-description">{{item.subtitle or subtitle | safe}}</p>
  </header>
  {% if item.quantity > 1 %}
  <p class="vendor-item-quantity">{{item.quantity | prettyNumber | safe}}</p>
  {% elif percentage %}
  <p class="vendor-item-quantity">{{percentage | safe}}</p>
  {% endif %}
  <img
    src="https://www.bungie.net{{ item.icon or item.displayProperties.icon | safe }}"
    alt="Icon for {{item.name or item.displayProperties.name | safe}} item."
    class="vendor-item-icon">
  {% if item.costs %}
  <ul role="list" class="vendor-item-cost-list">
  {% for cost in item.costs %}
    <li class="vendor-item-cost">
      <span class="vendor-item-cost-quantity">{{cost.quantity | prettyNumber | safe}}</span>
      <img
        src="https://www.bungie.net{{ cost.icon | safe }}"
        alt="Image of {{cost.name | safe}}, a cost to purchase {{item.name | safe}}."
        class="vendor-item-cost-icon">
    </li>
  {% endfor %}
  </ul>
  {% endif %}
</section>
