<li class="vendor-item">
  <img 
    src="https://www.bungie.net{{ item.icon or item.displayProperties.icon | safe }}"
    alt="Icon for {{item.name or item.displayProperties.name | safe}} item."
    class="vendor-item-icon">
  <header class="vendor-item-header">
    <h3 class="vendor-item-name">{{item.name or item.displayProperties.name | safe}}</h3>
    <p class="vendor-item-description">{{item.subtitle | safe}}</p>
  </header>
  {% if item.costs %}
  <ul class="vendor-item-cost-list">
  {% for cost in item.costs %}
    <li class="vendor-item-cost">
      <span class="vendor-item-cost-quantity">{{cost.quantity | safe}}</span>
      <img 
        src="https://www.bungie.net{{ cost.icon | safe }}"
        alt="Image of {{cost.name | safe}}, a cost to purchase {{item.name | safe}}."
        class="vendor-item-cost-icon">
    </li>
  {% endfor %}
  </ul>
  {% endif %}
</li>