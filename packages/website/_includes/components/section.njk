{% macro section(name, subtitle, description, icon, date) %}
  <section class="section">
    <img
      loading="lazy"
      src="https://bungie.net{{icon | safe}}"
      alt="Image of {{name | safe}}, {{subtitle | safe}} from Destiny 2."
      class="section-image">
    <header class="section-header">
      {% if name %}
        <h3 class="section-title" id="{{name | toIdCase }}">{{name | safe}}</h3>
      {% endif %}
      {% if subtitle %}
        <p class="small-label" style="text-align: right;">{{subtitle | safe}}</p>
      {% endif %}
    </header>
    {% if date %}
      <since-date class="small-label" datetime="{{date}}">{{date | readableDate}}</since-date>
    {% endif %}
    {% if description %}
      <p class="section-text">{{description | safe}}</p>
    {% endif %}
    {{ caller() }}
  </section>
{% endmacro %}
