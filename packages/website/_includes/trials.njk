{% if trials.isAvailable %}
  <article class="vendors iron-banner-container">
    <h2 class="section-title">Trials of Osiris</h2>
    <p class="section-description">Something about trials and the rewards.</p>

    <article class="vendor lost-sectors-container">
    {% for map in trials.maps %}
    <h3 class="section-subtitle">{{ map.displayProperties.name | safe }}</h3>
    <p class="vendor-subtitle">Map</p>
    <img alt="Image of the Destiny 2 vendor {{map.displayProperties.name | safe}}."
      class="vendor-image"
       src="https://bungie.net{{ map.pgcrImage | safe}}"/>
    {% endfor %}
    </article>
    <article class="vendor lost-sectors-container">
    {% for reward in trials.rewards %}
<h3 class="section-subtitle">{{ reward.displayProperties.name | safe }}</h3>
<p class="vendor-subtitle">Reward</p>
<img alt="Image of the Destiny 2 vendor {{reward.displayProperties.name | safe}}."
  class="vendor-image"
   src="https://bungie.net{{ reward.displayProperties.icon | safe}}"/>
    <p class="section-description iron-banner-description">{{ reward.displayProperties.description }}</p>
    {% endfor %}
    </article>
  </article>
{% endif %}
