{% import "components/items.njk" as items %}

{% if trials.isAvailable %}
  {% extends "components/article.njk" %}

  {% set title = "Trials of Osiris" %}
  {% set id = "trials" %}
  {% set description = "Something about trials and the rewards." %}

  {% block content %}
    <section class="vendor lost-sectors-container">
      {% for map in trials.maps %}
        <h3 class="section-subtitle">{{ map.displayProperties.name | safe }}</h3>
        <p class="vendor-subtitle">Map</p>
        <img alt="Image of the Destiny 2 vendor {{map.displayProperties.name | safe}}."
      class="section-image"
       src="https://bungie.net{{ map.pgcrImage | safe}}"/>
      {% endfor %}
    </section>
    <section class="lost-sector-modifiers-group">
      <h4 class="lost-sector-modifier-heading">Rewards</h4>
      <ul role="list" class=" lost-sector-list lost-sector-rewards-list">
        {% for item in trials.rewards %}
          <li class="">
            {{ items.inventoryItem(item.displayProperties.name, item.displayProperties.description, icon=item.displayProperties.icon) }}
          </li>
        {% endfor %}
      </ul>
    </section>
  {% endblock %}
{% endif %}