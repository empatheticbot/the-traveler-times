{% import "components/section.njk" as section %}
{% import "components/items.njk" as items %}

{% if trials.isAvailable %}
  {% extends "components/article.njk" %}

  {% set title = "Trials of Osiris" %}
  {% set id = "trials" %}
  {% set description %}
    Get your fireteam together to compete in the Crucible for a chance at making it to the lighthouse and the rewards it holds.
  {% endset %}
  {% set displayDate = trials.startDate %}

  {% block content %}
    {% for map in trials.maps %}
      {% call section.section(map.displayProperties.name, map.displayProperties.description, icon = map.pgcrImage) %}
      <section class="modifiers-group" style="margin-top: 1rem;">
        <h4 class="modifier-heading">Rewards</h4>
        <ul role="list" class=" lost-sector-list lost-sector-rewards-list">
          {% for item in trials.rewards %}
            <li class="">
              {{ items.inventoryItem(item.displayProperties.name, item.displayProperties.description, icon=item.displayProperties.icon) }}
            </li>
          {% endfor %}
        </ul>
      </section>
      {% endcall %}
    {% endfor %}
  {% endblock %}
{% endif %}