<article class="vendor">
  <img 
    src="https://bungie.net{{vendor.icon | safe}}" 
    alt="Image of the Destiny 2 vendor {{vendor.name | safe}}."
    class="vendor-image">
  <h2 class="vendor-name">{{vendor.name | safe}}</h2>
  <p class="vendor-subtitle">{{vendor.subtitle | safe}}</p>
  <ul class="vendor-sales-list">
  {% for item in vendor.sales %}
    <li class="vendor-item">
      <h3 class="vendor-item-name">{{item.name | safe}}</h3>
      <p class="vendor-item-description">{{item.subtitle | safe}}</p>
      <ul class="vendor-item-cost-list">
      {% for cost in item.costs %}
        <li class="vendor-item-cost">
          <span>{{cost.quantity | safe}}</span>
          <img 
            src="https://www.bungie.net{{ cost.icon | safe }}"
            alt="Image of {{cost.name | safe}}, a cost to purchase {{item.name | safe}}."
            class="vendor-item-cost-icon">
        </li>
      {% endfor %}
      </ul>
      <p class="vendor-item-cost">{{item.cost | safe}}</p>
      <img 
        src="https://www.bungie.net{{ item.icon | safe }}"
        alt="Icon for {{icon.name | safe}} item."
        class="vendor-item-icon">
    </li>
  {% endfor %}
  </ul>
</article>