{% import 'components/items.njk' as items %}

{% extends "components/article.njk" %}

{% set title = "Seasonal Challenges" %}
{% set id = "season" %}
{% set description = "This week's seasonal challenges." %}
{% set displayDate = season.currentSeason.startDate %}

{% block content %}
  {% for week in season.seasonalChallenges.weeks %}
    <details {% if loop.index0 === season.seasonalChallenges.currentWeekIndex %}open{% endif %}>
      <summary class="small-label">Week {{ loop.index }}</summary>
      <ul role="list" class=" lost-sector-list">
        {% for item in week.challenges %}
          <li class="">
            {{ items.inventoryItem(item.displayProperties.name, item.displayProperties.description, icon=item.displayProperties.icon) }}
          </li>
        {% endfor %}
      </ul>
    </details>
  {% endfor %}
{% endblock %}