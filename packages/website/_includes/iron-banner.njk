{% set ironBanner = weekly.ironBanner %}
{% if ironBanner.isAvailable %}

  {% extends "components/article.njk" %}

  {% set title = ironBanner.displayProperties.name | safe %}

  {% block content %}
    <section class="iron-banner-image-container">
      <img class="iron-banner--image-container--image" src="https://bungie.net{{ ironBanner.image | safe}}"/>
      <img class="iron-banner--image-container--icon" src="https://bungie.net{{ ironBanner.displayProperties.icon | safe }}"/>
    </section>
    <p class="section-description iron-banner-description">{{ ironBanner.displayProperties.description }}</p>
  {% endblock %}
{% endif %}