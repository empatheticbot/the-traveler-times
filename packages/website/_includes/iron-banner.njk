{% import "components/section.njk" as section %}

{% set ironBanner = weekly.ironBanner %}
{% if ironBanner.isAvailable %}
  {% extends "components/article.njk" %}

  {% set title = ironBanner.displayProperties.name | safe %}
  {% set id = "iron-banner" %}
  {% set description = ironBanner.displayProperties.description %}
  {% set displayDate = ironBanner.startDate %}

  {% block content %}
    {% call section.section(icon = ironBanner.image) %}
    {% endcall %}
  {% endblock %}
{% endif %}