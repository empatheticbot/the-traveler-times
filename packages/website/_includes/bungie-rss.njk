{% extends "components/article.njk" %}

{% set title = "Bungie.net" %}
{% set id = "bungie-rss" %}
{% set description = "Keep up on all the latest articles,
 directly from the source." %}

{% block content %}
  <ul role="list" class=" lost-sector-list">
    {% for item in bungieRss.items %}
      <li class="">
        <section class="newline small-label">
          {% if item.isNew %}
            <span class="badge">New</span>
          {% endif %}
          <relative-date 
            relative-range="2"
            relative-unit="day"
            datetime="{{ item.isoDate | htmlDateString }}">
            {{item.isoDate | readableDate}}
          </relative-date>
        </section>
        <a href="{{ item.link }}">
          <strong>{{item.title}}</strong>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}