{% if lostSector.isAvailable %}
  <article class="vendors">
    <h2 class="section-title">Lost Sectors</h2>
    <p class="section-description">Today's lost sector locations and rewards.</p>

    <article class="vendor">
      <h3 class="section-subtitle">{{ lostSector.legend.displayProperties.name | safe}}</h3>
      <p class="vendor-subtitle">{{ lostSector.legend.destination.displayProperties.name | safe}}</p>
      <img
        src="https://bungie.net{{lostSector.legend.pgcrImage | safe}}"
        alt="Image of the Destiny 2 vendor {{vendor.name | safe}}."
        class="vendor-image">
      <p class="vendor-text">{{vendor.description}}</p>
      {% if vendor.location %}
        <p class="vendor-text">Lost sector found on <strong>{{ lostSector.legend.destination.displayProperties.name | safe }}</strong>.</p>
      {% endif %}
      <ul role="list" class="inventory-item-list">
      {% for modifier in lostSector.legend.modifiersOfInterest %}
          {% set name = modifier.displayProperties.name %}
          {% set icon = modifier.displayProperties.icon %}
          {% set description = modifier.displayProperties.description %}
        <li class="inventory-item-container">{% include "inventory-item.njk" %}</li>
      {% endfor %}
      </ul>
    </article>
  </article>
{% endif %}
