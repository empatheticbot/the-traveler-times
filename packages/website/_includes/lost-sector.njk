{% if lostSector.isAvailable %}
  <article class="article-container iron-banner--container">
  <h2>Today's Lost Sectors</h2>
  <section>
  <section class="iron-banner--image-container nightfall--image-container">
    <img class="iron-banner--image-container--image" src="https://bungie.net{{ lostSector.legend.pgcrImage }}" />
  </section>
  <section class="iron-banner--text-container">
    <h2 class="iron-banner--heading">Today's Legend Lost Sector is <span class="xur-planet">{{ lostSector.legend.displayProperties.name | safe }}</span></h2>
    <p>Found on {{ lostSector.legend.destination.displayProperties.name }}</p>
  </section>
    <ol class="item-list">
      <li class="nightfall--difficulty-container">
        <h3 class="nightfall--difficulty-name">Legend</h3>
        <section class="nightfall--difficulty-modifiers">
          {% for modifier in lostSector.legend.modifiersOfInterest %}
            {% set name = modifier.displayProperties.name %}
            {% set icon = modifier.displayProperties.icon %}
            {% set description = modifier.displayProperties.description %}
            {% include 'modifier.njk' %}
          {% endfor %}
        </section>
      </li>
  </ol>
  </section>
  <section>
  <section class="iron-banner--image-container nightfall--image-container">
    <img class="iron-banner--image-container--image" src="https://bungie.net{{ lostSector.master.pgcrImage }}" />
  </section>
  <section class="iron-banner--text-container">
    <h2 class="iron-banner--heading">Today's Master Lost Sector is <span class="xur-planet">{{ lostSector.master.displayProperties.name | safe }}</span></h2>
    <p>Found on {{ lostSector.master.destination.displayProperties.name }}</p>
  </section>
    <ol class="item-list">
      <li class="nightfall--difficulty-container">
        <h3 class="nightfall--difficulty-name">Master</h3>
        <section class="nightfall--difficulty-modifiers">
          {% for modifier in lostSector.master.modifiersOfInterest %}
            {% set name = modifier.displayProperties.name %}
            {% set icon = modifier.displayProperties.icon %}
            {% set description = modifier.displayProperties.description %}
            {% include 'modifier.njk' %}
          {% endfor %}
        </section>
      </li>
  </ol>
  </section>
  </article>
{% endif %}
