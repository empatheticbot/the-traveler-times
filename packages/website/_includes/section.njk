<section class="section-container {{ sectionClass }}">
  <h2 class="section-title">{{ sectionTitle }}</h2>
 {% block content %}
   {{ content | safe }}
 {% endblock %}
</section>
<script type="module">
  var sectionDateElement = document.querySelector('#{{sectionId}}');
  if (sectionDateElement) {
    var sectionDate = moment('{{ sectionDate }}');
    function updateRelativeDates() {
      sectionDateElement.innerText = `${sectionDate.fromNow()}`;
      console.log(sectionDateElement.innerText);
    }
    setInterval(updateRelativeDates, 10000);
    updateRelativeDates();
  }
</script>
