{% set sectionTitle = 'The Meta' %}
{% set sectionTimeDescripter = 'Last 7 days' %}
{% set sectionId = 'meta' %}
{% set sectionClass = 'section-container__meta' %}
{% extends 'section.njk' %}

{% block content %}
  <h3>Top Usage</h3>
  <ul>
    {% for weapon in meta.topUsage %}
      <li>
        <h4>{{weapon.displayProperties.name}}</h4>
        <img src="https://bungie.net{{ weapon.displayProperties.icon | safe }}" alt="{{weapon.displayProperties.name}} weapon icon.">
        <p>{{ weapon.kills / meta.totalKills}}</p>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
