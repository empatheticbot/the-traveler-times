{% set xur = vendors.xur %}
{% if xur.isAvailable %}
<article class="article-container">
  <header class="article-header">
    {# <div class="article-line"></div>
    <time class="article-date" datetime="{{ destinyData.weeklyReset | htmlDateString }}">
    leaves {{ destinyData.weeklyReset | relativeDate }}</time> #}
    {% if xur.location.results > 4 %}
    <h2 class="article-title">Xûr Spotted on <span class="xur-planet">{{ xur.location.planet | safe }}</span></h2>
    <h3 class="article-subtitle">Last seen at <span class="xur-location">{{ xur.location.area | safe }}</span></h3>
    {% else %}
    <h2 class="article-title">Xûr Arrived, Location Unknown</h2>
    {% endif %}
  </header>
  <ol class="item-list">
    {% for item in xur.sales %}
      {% set name = item.name %}
      {% set cost = item.costs[0].quantity %}
      {% set icon = item.icon %}
      {% set characterClass = item.subtitle %}
      {% set costIcon = item.costs[0].icon %}
      {% set description = item.description %}
      <li class="item-wrapper">{% include 'item.njk' %}</li>
    {% endfor %}
  </ol>
</article>
{% endif %}
